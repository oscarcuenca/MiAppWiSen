<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="11"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context=".ui.ActividadInsercionObjeto"
    tools:showIn="@layout/actividad_insercion_objeto">



<TextView
        android:id="@+id/icono_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_row="0"
        android:text="Nombre"
    android:textSize="12dp"
    android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout

        android:id="@+id/mascara_campo_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_row="0">



        <EditText
            android:id="@+id/campo_descripcion_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hint_campo_texto_nombre" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/icono_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_gravity="center_vertical"
        android:layout_column="0"
        android:text="Marca"
        android:textStyle="bold"
        android:textSize="12dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mascara_campo_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"

        android:layout_row="1">

        <EditText
            android:id="@+id/campo_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_campo_texto_marca"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/ic_action_location_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_row="2"
        android:text="Modelo"
        android:textStyle="bold"
        android:textSize="12dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_row="2">

        <EditText
            android:id="@+id/campo_modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_campo_texto_modelo"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/icono_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_row="3"
        android:text="Correo"
        android:textSize="12dp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_row="3">

        <EditText
            android:id="@+id/campo_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_campo_texto_correo"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/miIdObjeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_row="4"
        android:text="IdObjeto"
        android:textStyle="bold"
        android:textSize="12dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_row="4">

        <EditText
            android:id="@+id/campo_idObjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/idObjeto"
            android:inputType="text" />


    </android.support.design.widget.TextInputLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="356dp"
        android:layout_height="180dp"
        android:layout_row="10"
        android:layout_column="0"
        android:weightSum="1"
        android:layout_columnSpan="6">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginLeft="20dp">
        <ImageButton
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:id="@+id/accesodata"
            android:src="@drawable/accesodata"
            android:layout_column="0"
            android:layout_row="0"
            android:singleLine="true"
            android:nestedScrollingEnabled="false"
            android:layout_marginLeft="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/acceso_grafica_sensor"
            android:id="@+id/textView5"
            android:textIsSelectable="false"
            android:textSize="12dp"
            android:textColor="#484949"
            android:textAlignment="center"
            android:layout_marginLeft="70dp" />

        <ImageButton
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:src="@drawable/accesotabla"
            android:id="@+id/accesotabla"
            android:layout_column="1"
            android:layout_row="0"
            android:singleLine="true"
            android:nestedScrollingEnabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/acceso_datos_sensor"
                android:id="@+id/textView6"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#484949"
                android:textSize="12dp"
                android:textIsSelectable="true"
                android:layout_marginLeft="35dp" />


        </GridLayout>
    </LinearLayout>

</GridLayout>