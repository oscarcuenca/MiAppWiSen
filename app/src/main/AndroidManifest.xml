<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amg_eservices.miappwisen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- AutenticaciÃƒÂ³n -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <!-- SincronizaciÃƒÂ³n -->
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.amg_eservices.miappwisen.Wellcome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amg_eservices.miappwisen.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.amg_eservices.miappwisen.RegistroyAcceso.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <activity
            android:name="com.amg_eservices.miappwisen.RegistroyAcceso.Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>

        <activity
            android:name="com.amg_eservices.miappwisen.SaltoWeb.WebOficial"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>


        <activity
            android:name="com.amg_eservices.miappwisen.RegistroyAcceso.ProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>


        <activity
            android:name="com.amg_eservices.miappwisen.MisSensores.ui.ActividadListaObjeto"
            android:label="@string/titulo_actividad_lista_objetos"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>

        <activity
            android:name=".GeneradorData.DatosSensor"
            android:label="@string/titulo_actividad_lista_objetos"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>


        <activity
            android:name="com.amg_eservices.miappwisen.MisSensores.ui.ActividadInsercionObjeto"
            android:label="@string/titulo_actividad_insertar_objeto"
            android:parentActivityName="com.amg_eservices.miappwisen.MisSensores.ui.ActividadListaObjeto"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.amg_eservices.miappwisen.MisSensores.ui.ActividadListaObjeto" />
        </activity>

        <provider
            android:name="com.amg_eservices.miappwisen.MisSensores.provider.ProviderObjetos"
            android:authorities="com.amg_eservices.miappwisen"
            android:enabled="true"
            android:exported="true"/>
        <service
            android:name="com.amg_eservices.miappwisen.MisSensores.sync.ServicioAutenticacion"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/autenticador" />
        </service>



        <service
            android:name="com.amg_eservices.miappwisen.MisSensores.sync.ServicioSincronizacion"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter" />
        </service>


    </application>

</manifest>
